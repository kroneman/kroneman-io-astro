---
import BaseHead from "../layouts/sections/BaseHead.astro";
import Header from "../layouts/sections/Header.astro";
import Footer from "../components/Footer";
import Layout from "../components/Layout";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Layout.Body>
    <Header title={SITE_TITLE} />
    <Layout.Main className="flex flex-wrap">
      <div class="text-center basis-full mt-24">
        <h1 class="text-[72px]">Lennart Kroneman</h1>
        <p class="text-lg">
          Curious Software Engineer building products at Ramsey Solutions
        </p>
      </div>
    </Layout.Main>
    <Layout.Footer>
      <Footer />
    </Layout.Footer>
  </Layout.Body>
</html>
